<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F4F4F4 "

    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/footer"
        layout="@layout/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_incentive"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
        <LinearLayout
            android:visibility="visible"
            android:layout_marginLeft="8dp"
            android:id="@+id/ll_fyear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="वित्तीय वर्ष"
                android:textColor="@color/color_black"
                android:id="@+id/tv_fyear"
                android:textSize="12sp"/>

            <Spinner
                android:background="@drawable/spinner_bg1"
                android:layout_marginTop="4dp"
                android:id="@+id/sp_fyear"
                android:layout_width="match_parent"
                android:layout_height="36dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:id="@+id/ll_designation"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="पदनाम"
                android:textColor="@color/color_black"
                android:id="@+id/tv_designation"
                android:textSize="12sp"/>

            <Spinner
                android:background="@drawable/spinner_bg1"
                android:layout_marginTop="4dp"
                android:id="@+id/sp_designation"
                android:layout_width="match_parent"
                android:layout_height="36dp" />

        </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:visibility="visible"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/ll_filter_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="फ़िल्टर का प्रकार"
                        android:textColor="@color/color_black"
                        android:id="@+id/tv_filter_type"
                        android:textSize="12sp"/>

                    <Spinner
                        android:background="@drawable/spinner_bg1"
                        android:layout_marginTop="4dp"
                        android:id="@+id/sp_filter_type"
                        android:layout_width="match_parent"
                        android:layout_height="36dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:id="@+id/ll_ashaworker"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="फ़िल्टर टेक्स्ट"
                        android:textColor="@color/color_black"
                        android:id="@+id/tv_spworker"
                        android:textSize="12sp"/>

                    <EditText
                        android:background="@drawable/textboxshape"
                        android:layout_marginTop="4dp"
                        android:id="@+id/sp_worker"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:textSize="14sp"
                        android:paddingLeft="15dp"/>


                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_search"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/buttonshape"
                android:text="खोज करें"
                android:textColor="@color/color_white"
                android:textSize="17sp" />

        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_incentive">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">



                <TextView
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/txt"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="प्रोफ़ाइल की जानकारी :-"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@drawable/shape_adapter_cell"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="जिला"
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:textSize="15sp" />


                                <TextView
                                    android:id="@+id/tv_dist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="New Text"
                                    android:textColor="#151B54"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textColor="@android:color/black"

                                    android:textStyle="normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="प्रखंड"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_block"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="New Text"
                                    android:textColor="#151B54"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="स्वास्थ्य उप केंद्र"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_hsc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lines="1"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/shape_adapter_cell"
                    android:padding="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="नाम"
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:textSize="15sp" />


                                <TextView
                                    android:id="@+id/tv_name_as_per_aadhar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="New Text"
                                    android:textColor="#151B54"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="आधार नंबर"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_aadhar_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lines="1"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IFSC कोड"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_ifsc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lines="1"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="खाता संख्या"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="532823598"
                                    android:textColor="#151B54"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="पिता/पति का नाम"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_father_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lines="1"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="मोबाइल नंबर"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_mobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="532823598"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="जन्म तिथि"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_dob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lines="1"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="कार्यग्रहण की तिथि"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_date_of_joining"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="532823598"
                                    android:textColor="#151B54"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:background="#ffffff"
                    android:id="@+id/sblist"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="130dp"
                            android:lines="2"
                            android:id="@+id/bf_name1"
                            android:textColor="#151B54"
                            android:padding="5dp"
                            android:text="Vijya Shalinee"
                            android:layout_height="match_parent" />
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:visibility="gone"
                            android:lines="2"
                            android:id="@+id/panchyat_name"
                            android:textColor="#151B54"
                            android:layout_weight="0.3"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:text="Vijya Shalinee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_weight="0.3"
                            android:id="@+id/wardname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:padding="5dp"
                            android:text="820527375847"
                            android:textColor="#151B54" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>

</RelativeLayout>