<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FinalizeAshaWorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:id="@+id/rl_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_adapter_cell">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_fn_yr"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="वित्तीय वर्ष: "
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/fn_mnth"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="वित्तीय महीना: "
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:orientation="vertical"
                        android:background="@color/color_white"/>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_div_zone"
                        android:layout_below="@+id/ll_username"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:id="@+id/ll_pan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="कुल दावा"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_total_work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:id="@+id/ll_division"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="कुल केंद्र राशी"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_total_central_amnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:id="@+id/ll_zone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="कुल राज्य राशी"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_total_state_amnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>