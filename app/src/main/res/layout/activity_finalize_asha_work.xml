<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FinalizeAshaWorkActivity">

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header_main"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/header"
        android:layout_above="@+id/ll_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_adapter_cell">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_fn_yr"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="वित्तीय वर्ष: "
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/fn_mnth"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="वित्तीय महीना: "
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_dist_role"
                        android:layout_below="@+id/ll_div_zone"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_district"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="जिला"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_district"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_role"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="प्रखंड"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_block"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:orientation="vertical"
                        android:background="@color/color_white"/>

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_div_zone"
                        android:layout_below="@+id/ll_username"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:id="@+id/ll_pan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="पंचायत"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_panchayat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:id="@+id/ll_division"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="आंगनवाड़ी"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_aanganwadi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:id="@+id/ll_zone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="स्वास्थ्य उप केंद्र"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_hscname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/rv_work"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:id="@+id/rl_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_adapter_cell">


                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_username"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:visibility="gone"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="कुल दावा"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_total_work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_central_amt_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="कुल दावा की गयी राशि"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_total_central_amnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="राज्य राशि"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_total_state_amnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_monthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rr"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Routine &amp; Reccuring"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_data"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_sc"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State Contribution"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_data_sc"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_declaration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:background="@drawable/shape_adapter_cell"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="घोषणा पत्र"
                            android:textSize="15sp"
                            android:textColor="@color/color_black"
                            android:textStyle="bold"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" उपरोक्त सभी दावा आशा facilitator के द्वारा सत्यापित हैं| "
                            android:id="@+id/ch_1"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" उपरोक्त सभी दावा स्वास्थ कार्यक्रम के अनुरप है| "
                            android:id="@+id/ch_2"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" उपरोक्त सभी विवरणी सही है, एवं गलत पाए जाने पर मेरे विरुद्ध करवाई की जा सकती है| "
                            android:id="@+id/ch_3"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_bottom"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_adapter_cell">

                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_username"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:visibility="gone"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="मासिक दावा राशि"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/tv_monthly_amnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="कुल राशि"
                            android:textColor="@color/color_black"
                            android:textSize="15sp"/>

                        <TextView
                            android:gravity="right"
                            android:id="@+id/tv_total_amnt"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:textStyle="bold"
                            android:textColor="@color/holo_green_dark"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_otp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:visibility="gone"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:id="@+id/edt_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textboxshape"
                android:hint="OTP डालें"
                android:padding="10dp"
                android:maxLength="4"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#222222"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btn_verify_otp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:text="OTP प्राप्त करें"
                android:textColor="#ffff"
                android:textSize="17sp"
                android:onClick="onGetVerifyOtp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:id="@+id/ll_btn_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_above="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/buttonshapeaccept"
                android:text="    अंतिम रूप दें  "
                android:textColor="#ffff"
                android:textSize="17sp"
                android:onClick="finalizeActivity"/>

            <Button
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/btn_proceed"
                android:layout_above="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/buttonshapedecline"
                android:text="    पीछे जाएँ   "
                android:textColor="#ffff"
                android:textSize="17sp"
                android:onClick="dismissActivity"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>