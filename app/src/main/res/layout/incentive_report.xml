<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_incentive">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:background="@drawable/shape_adapter_cell"
                    android:padding="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="नाम"
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:textSize="15sp" />


                                <TextView
                                    android:id="@+id/tv_name_as_per_aadhar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lines="2"
                                    android:text="New Text"
                                    android:textColor="#151B54"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="महीना"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lines="1"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="स्वास्थ्य केंद्र का नाम"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_health_center_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:lines="2"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="खाता संख्या/IFSC"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="532823598"
                                    android:textColor="#151B54"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="अंतिम तारीख "
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_last_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:lines="2"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="राज्य /केंद्रीय \nकुल राशि"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_state_cental_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="532823598"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BHM सत्यापन की स्थिति\nतारीख"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_bhm_final_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:lines="2"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MOIC सत्यापन की स्थिति\nतारीख"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_moic_final_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="532823598"
                                    android:textColor="#151B54"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hq सत्यापन स्थिति\nतारीख"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_hq_final_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:lines="2"
                                android:text="New Text"
                                android:textColor="#151B54"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textColor="@android:color/black"
                                    android:textStyle="normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="भुगतान भेजा"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_payment_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="532823598"
                                    android:textColor="#151B54"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:background="#ffffff"
                    android:id="@+id/sblist"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="130dp"
                            android:lines="2"
                            android:id="@+id/bf_name1"
                            android:textColor="#151B54"
                            android:padding="5dp"
                            android:text="Vijya Shalinee"
                            android:layout_height="match_parent" />
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:visibility="gone"
                            android:lines="2"
                            android:id="@+id/panchyat_name"
                            android:textColor="#151B54"
                            android:layout_weight="0.3"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:text="Vijya Shalinee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_weight="0.3"
                            android:id="@+id/wardname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:padding="5dp"
                            android:text="820527375847"
                            android:textColor="#151B54" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>
</RelativeLayout>